\begin{equation}
X_{Babble}=\sum X_{Speakers}\label{eq:babble-sum-speakers}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:babble-sum-speakers"

\end_inset

