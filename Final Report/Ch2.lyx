\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
V_{fs}\leftarrow\frac{V_{fc}}{\sum_{f}V_{fc}}\label{eq:mult-update-div-normalise}
\end{equation}

\end_inset


\end_layout

