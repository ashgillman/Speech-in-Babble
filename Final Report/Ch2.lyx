\begin_inset CommandInset citation
LatexCommand citet
key "Lee1999"

\end_inset

 and is given as 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:kl-divergence-def"

\end_inset

.
 Here, the objective is maximisation of the divergence objective function.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
F=D_{KL}\left(X\|VW\right)=\sum_{f=1}^{n_{f}}\sum_{s=1}^{n_{s}}\left[X_{fs}\log\left(VW\right)_{fs}-\left(VW\right)_{fs}\right]\label{eq:kl-divergence-def}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset CommandInset nomenclature
LatexCommand nomenclature
symbol "$D_{KL}\\left(.\\right)$"
description "Indicates the Kullback-Leibler divergence."

\end_inset


\end_layout

